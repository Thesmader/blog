---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { href, class: className, ...props } = Astro.props;
const isActive = href=== '/'? Astro.url.pathname === '/':Astro.url.pathname.includes(href.toString());
---

<div class="flex flex-col">
<a href={href} class:list={[className, `
pr-2
${isActive ? 'text-blue-600 font-bold tracking-wide underline underline-offset-8 decoration-2':''}
`]} {...props}>
	<slot />
</a>
</div>
